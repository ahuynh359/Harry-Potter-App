<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/constraint_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.appcompat.widget.AppCompatImageView
        android:transitionName="@string/house"
        android:id="@+id/imv_house"
        android:src="@drawable/logo_gryffindor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="@dimen/_320dp"
        android:layout_height="@dimen/_320dp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="@dimen/_24sp"
        android:fontFamily="@font/harry_potter"
        tools:text="Gryffindor"
        android:id="@+id/tv_house"
        app:layout_constraintTop_toBottomOf="@+id/imv_house"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>